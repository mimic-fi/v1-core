{
  "name": "@mimic-fi/v1-portfolios",
  "version": "0.0.8",
  "license": "GPL-3.0",
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "artifacts/contracts/**/*",
    "!artifacts/contracts/test/*",
    "contracts/**/*",
    "!contracts/test/*"
  ],
  "scripts": {
    "build": "yarn compile && rm -rf dist && tsc",
    "compile": "hardhat compile",
    "lint": "yarn lint:solidity && yarn lint:typescript",
    "lint:solidity": "solhint 'contracts/**/*.sol' --config ../../node_modules/solhint-config-mimic/index.js",
    "lint:typescript": "eslint . --ext .ts",
    "test": "hardhat test",
    "prepublish": "yarn build"
  },
  "dependencies": {
    "@mimic-fi/v1-vault": "0.0.11",
    "@openzeppelin/contracts": "4.1.0"
  },
  "devDependencies": {
    "@mimic-fi/v1-helpers": "0.0.6",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.2.2",
    "chai": "^4.2.0",
    "eslint-config-mimic": "^0.0.2",
    "ethereum-waffle": "^3.3.0",
    "ethers": "^5.0.8",
    "hardhat": "^2.4.1",
    "hardhat-local-networks-config-plugin": "^0.0.6",
    "mocha": "^6.2.3",
    "solhint-config-mimic": "^0.0.1",
    "ts-node": "^8.5.4",
    "typescript": "^4.3.4"
  },
  "eslintConfig": {
    "extends": "eslint-config-mimic",
    "ignorePatterns": ["dist"]
  }
}
